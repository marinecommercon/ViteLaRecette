<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

     <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:orientation="vertical"
          android:layout_marginTop="30dp" >

          <Button
                  android:id="@+id/buttonSearchID"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="buttonSearchID"/>
        
            <TextView
		    android:id="@+id/type"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textStyle="bold"
		    android:textColor="#000000"
		    android:text="Type de plat" />
  
			<Spinner
        	android:id="@+id/spinnerChangeOrder"
        	android:layout_width="fill_parent"
        	android:layout_height="40dp" />

    		<AutoCompleteTextView
       	 	android:id="@+id/autoCompleteTextViewIngredientA"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="" />

    		<AutoCompleteTextView
        	android:id="@+id/autoCompleteTextViewIngredientB"
       		android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:text="" />

    		<AutoCompleteTextView
        	android:id="@+id/autoCompleteTextViewIngredientC"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:ems="10"
        	android:text="" />

            
        </LinearLayout>
        
      </ScrollView>
  


    </LinearLayout>